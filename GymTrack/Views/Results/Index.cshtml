@model IEnumerable<GymTrack.Models.Results>

@{
    ViewBag.Title = "Index";
}

<h2>Results</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Exercise.ExerciseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExerciseDayProgram.ExerciseDayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExerciseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SetNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reps)
        </th>
        <th></th>
